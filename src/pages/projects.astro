---
import projects from "../collections/projects.json";
import PageHeading from "../components/page-heading.astro";
import Project from "../components/project.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="My Projects">
  <section class="relative z-20 max-w-5xl mx-auto my-12 px-7 lg:px-0 main-title">
    <PageHeading
      title="My Projects"
      description="I have worked on various web development projects, focusing on building scalable and efficient websites. My projects emphasize mobile responsiveness, SEO optimization, and seamless user interaction, including inquiry form integration."
    />

    <div
      class="z-50 grid items-stretch w-full grid-cols-1 my-8 gap-7 sm:gap-5 sm:grid-cols-2 md:grid-cols-3"
    >
      {
        projects.map((project) => {
          return (
            <Project
              name={project.name}
              description={project.description}
              image={project.image}
              
            />
          )
        })
      }
    </div>
  </section>
</Layout>
